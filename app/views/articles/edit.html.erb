<h1> Edit existing Article </h1>

<% if @article.errors.any?%>
<h2>The following errors prevented you from editing the article </h2>

<ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></l1>
  <% end %>
</ul>
<%end%>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %> <br/>
    <%= f.text_field :title%>
  </p>
  <p>
    <%= f.label :description%><br/>
    <%= f.text_area :description, size: "40x15"%>
  </p>
  <p>
    <%= f.submit%>
  </p>
<% end %>